@inherits RoomFormBase

<EditForm Model="Model" OnValidSubmit="OnValidSubmit" title="TitleForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label>Name</label>
        <InputText class="form-control" @bind-Value="Model.Name" />
    </div>

    <div class="mb-3">
        <label>Description</label>
        <InputTextArea class="form-control" @bind-Value="Model.Description" />
    </div>

    <div class="mb-3">
        <label>Capacity</label>
        <InputNumber class="form-control" @bind-Value="Model.Capacity" />
    </div>

    <div class="mb-3">
        <label>Price</label>
        <InputNumber class="form-control" @bind-Value="Model.Price" />
    </div>

    <div class="form-check mb-3">
        <InputCheckbox class="form-check-input" @bind-Value="Model.IsAvailable" />
        <label class="form-check-label">Available</label>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }

    <button class="btn btn-primary" type="submit">Save</button>
</EditForm>
